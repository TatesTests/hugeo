curl -L https://github.com/sass/dart-sass-embedded/releases/download/1.62.1/sass_embedded-1.62.1-linux-x64.tar.gz -o /usr/local/sass_embedded.tar.gz
tar xvf /usr/local/sass_embedded.tar.gz
mkdir -p /usr/local/my-sass/bin
mv ./sass_embedded /usr/local/my-sass/bin
rm -rf /usr/local/sass_embedded.tar.gz
export PATH="/usr/local/my-sass/bin/sass_embedded:${PATH}"

which dart-sass-embedded